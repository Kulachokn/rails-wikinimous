<div class="navbar border-bottom p-3 bg-secondary bg-opacity-10">
  <h1>Articles</h1>
  <%= link_to 'Create new article', new_article_path %>
</div>
<div class="container col-6 pt-3">
<ul class="list-unstyled">
  <% @articles.each do |article| %>
    <li class="text-decoration-none"><h2 class="fs-2"><%= link_to article.title, article_path(article) %></h2><p class="fs-5"><%= article.content %></p></li>
  <% end %>
</ul>
</div>
